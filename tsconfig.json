{
  "compilerOptions": {
    "sourceMap": true,
    "skipLibCheck": true,
    "lib": [
      "es2019",
      "dom"
    ],
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ]
  }
}